<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Metadata>
		[HostComponent("com.lafabrick.spark.components.SparkToolTip")]
	</fx:Metadata>

    <fx:Script>
        <![CDATA[
            override protected function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number):void
            {
                fillColor.color = uint(getStyle('fillColor'));
                fillColor.alpha = Number(getStyle('AlphaColor'));

                strokeColor.color = uint(getStyle('borderColor'));
                strokeColor.alpha = Number(getStyle('borderAlpha'));

                border.radiusX = Number(getStyle('cornerRadius'));
                border.radiusY = Number(getStyle('cornerRadius'));

                super.updateDisplayList(unscaledWidth, unscaledHeight);
            }
        ]]>
    </fx:Script>

    <!-- SkinParts
    name=tipDisplay, type=spark.components.supportClasses.TextBase, required=false
    name=iconDIsplay, type=spark.primitives.BitmapImage, required=false
    -->



    <s:Rect id="border"
            bottom="0" left="0" right="0"
            top="0"
            radiusX="6" radiusY="6">
        <s:fill>
            <s:SolidColor id="fillColor" />
        </s:fill>
        <s:stroke>
            <s:SolidColorStroke id="strokeColor"
                                pixelHinting="true" />
        </s:stroke>
    </s:Rect>

    <s:Label id="tipDisplay"
             bottom="10" left="10" right="10"
             textAlign="center" top="10" verticalAlign="middle" />


</s:Skin>
